<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/details_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/step_short_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_padding_size_small"
        android:layout_marginBottom="@dimen/margin_padding_size_small"
        app:fontFamily="@font/roboto_regular"
        android:textSize="@dimen/material_typography_h6"
        tools:text="@string/short_description"
        android:textColor="@color/white"
        android:background="@color/colorAccent"/>
    <TextView
        android:id="@+id/step_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fontFamily="@font/roboto_regular"
        android:textSize="@dimen/material_typography_body1"
        tools:text="@string/short_description"
        android:paddingBottom="@dimen/margin_padding_size_medium"/>

    <ImageView
        android:id="@+id/recipe_icon"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        app:srcCompat="@drawable/ic_ondemand_video_black_40dp"
        android:paddingBottom="@dimen/margin_padding_size_medium"/>


</LinearLayout>
